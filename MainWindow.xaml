<Window x:Class="Számlakészítő_adatnyilvántartó.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Főablak - Adatnyilvántartó"
        Height="400"
        Width="900"
        Background="#2B2B2B"
        Foreground="White"
        ResizeMode="NoResize">

    <Window.Resources>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Background" Value="#3F3F3F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="#1E792C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20,20,11,20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ADATNYILVÁNTARTÓ -->
        <GroupBox Header="Adatnyilvántartó" Padding="15" Margin="0,0,0,15" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <Label Content="Termék neve:" VerticalAlignment="Center"/>
                <TextBox x:Name="TermékNév_TextBox" Grid.Column="1" Margin="5"/>

                <Label Grid.Column="2" Content="Kategória:" VerticalAlignment="Center"/>
                <ComboBox x:Name="Kategória_ComboBox" Grid.Column="3" Margin="6,0">
                    <ComboBoxItem Content="Étel"/>
                    <ComboBoxItem Content="Ital"/>
                    <ComboBoxItem Content="Bútor"/>
                    <ComboBoxItem Content="Elektronika"/>
                </ComboBox>

                <Label Grid.Column="4" Content="Ár:" VerticalAlignment="Center"/>
                <TextBox x:Name="Ár_TextBox" Grid.Column="5" Margin="5"/>

                <Label Grid.Column="6" Content="Db:" VerticalAlignment="Center"/>
                <TextBox x:Name="Darab_TextBox" Grid.Column="7" Margin="6,0"/>

                <Button x:Name="Hozzáadás_gomb" Grid.Column="8"
                Content="Hozzáadás"
                Click="Hozzáadás_gomb_click"
                Margin="6,0,127,0" Grid.ColumnSpan="2" BorderBrush="#FF131313" Foreground="black"/>
            </Grid>
        </GroupBox>

        <!-- SZÁMLAKÉSZÍTŐ -->
        <GroupBox Grid.Row="1" Header="Számlakészítő" Padding="15" BorderBrush="Black" Foreground="White" Margin="0,0,505,0">
            <StackPanel Width="320">
                <Label Content="Megrendelő neve"/>
                <TextBox x:Name="tbRendelo" Margin="0,5"/>

                <Label Content="Email"/>
                <TextBox x:Name="tbEmail" Margin="0,5"/>
                <Button Content="Számla készítése" Foreground="black" Height="35" Width="321"/>
            </StackPanel>
        </GroupBox>
        <Button Content="NYILVÁNTARTÓ TÁBLÁZAT"
        HorizontalAlignment="Left"
        Margin="382,1,0,0"
        VerticalAlignment="Top"
        Grid.Row="1"
        Width="474"
        BorderBrush="Black"
        Foreground="Black"
        Height="224"
        FontFamily="Trebuchet MS"
        FontSize="24"
        FontStyle="Italic"
        Click="OpenTable_Click"/>


    </Grid>
</Window>

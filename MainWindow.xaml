<Window x:Class="Számlakészítő_adatnyilvántartó.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Főablak - Adatnyilvántartó"
        Height="628"
        Width="1337"
        Background="#2B2B2B"
        Foreground="White">

    <Window.Resources>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Background" Value="#3F3F3F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="#1E792C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ADATNYILVÁNTARTÓ -->
        <GroupBox Header="Adatnyilvántartó" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <Label Content="Termék neve:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Margin="5"/>

                <Label Grid.Column="2" Content="Kategória:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="3" Margin="5"/>

                <Label Grid.Column="4" Content="Ár:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="5" Margin="5"/>

                <Button x:Name="Hozzáadás_gomb" Grid.Column="6" Content="Hozzáadás" Margin="13,-2,103,2" Width="90" Click="Hozzáadás_gomb_Click"/>
                <Button Grid.Column="6" Content="Táblázat&#xD;&#xA;" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Center" Height="166" Width="87"/>
            </Grid>
        </GroupBox>

        <!-- SZÁMLAKÉSZÍTŐ -->
        <GroupBox Grid.Row="1" Header="Számlakészítő" FontWeight="Bold" Padding="10" Margin="0,15,0,0">
            <StackPanel Width="300">
                <Label Content="Megrendelő neve"/>
                <TextBox Margin="0,5"/>

                <Label Content="Email"/>
                <TextBox Margin="0,5"/>

                <Button Content="Számla készítése" Height="21" Margin="0,15,0,0" Width="294"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

<Window x:Class="Számlakészítő_adatnyilvántartó.Szamla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Számla" Height="600" Width="900"
        Background="#1e1e1e">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Számlázás"
                  Foreground="White"
                  BorderBrush="#4CAF50"
                  Margin="0 0 0 10">

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Kiállító:"/>
                    <TextBox x:Name="Kiallito_TextBox"/>

                    <TextBlock Text="Elérhetőség:" Margin="0 10 0 0"/>
                    <TextBox x:Name="Elerhetoseg_TextBox"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1"
                  Header="Számla tételei"
                  Foreground="White"
                  BorderBrush="#4CAF50"
                  Margin="0 0 0 10">

            <DataGrid x:Name="SzamlaDataGrid"
                      AutoGenerateColumns="False"
                      Background="#2b2b2b"
                      Foreground="White"
                      CanUserAddRows="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                    <DataGridTextColumn Header="Név" Binding="{Binding Nev}" Width="*"/>
                    <DataGridTextColumn Header="Kategória" Binding="{Binding Kategoria}" Width="150"/>
                    <DataGridTextColumn Header="Ár" Binding="{Binding Ar}" Width="100"/>
                    <DataGridTextColumn Header="Db" Binding="{Binding Darab}" Width="80"/>
                    <DataGridTextColumn Header="Összesen"
                        Binding="{Binding Osszeg}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Border Grid.Row="2"
                Background="#2e7d32"
                CornerRadius="8"
                Padding="10">

            <DockPanel>
                <TextBlock Text="Összesen:"
                           FontSize="18"
                           Foreground="White"
                           DockPanel.Dock="Left"/>

                <TextBlock x:Name="Osszesen_Text"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="10 0"/>

                <Button Content="Számla mentése"
                        DockPanel.Dock="Right"
                        Padding="15 5"
                        Background="#1b5e20"
                        Foreground="White"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

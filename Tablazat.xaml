<Window x:Class="Számlakészítő_adatnyilvántartó.Tablazat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Számlakészítő_adatnyilvántartó"
        mc:Ignorable="d"
        Title="Tablazat" Height="400" Width="700">
    <Grid>
        <DataGrid x:Name="dgAdatok"
          AutoGenerateColumns="True"
          IsReadOnly="True"
          FontSize="16"
          RowHeight="35"
          HeadersVisibility="All"
          GridLinesVisibility="All"
          AlternatingRowBackground="LightGray"
          Margin="10" Background="White" Foreground="Black"/>


    </Grid>
</Window>
